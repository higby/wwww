---
title: 'Movies'
---

<ol role='list' class='letterbox'>
  {% for movie in movies %}
    {% if movie.rewatch == false %}
      <li>
        <strong>{{ movie.title }} ({{ movie.year }})</strong>
        <time>{{ movie.watched | date_formal }}</time>
        {% if movie.rating %}
          <span class='rating'>{{ movie.rating }}</span>
        {% endif %}
        {% if movie.review %}
          <span class='review'>{{ movie.review }}</span>
        {% endif %}
      </li>
    {% endif %}
  {% endfor %}
</ol>

{% stylesheet %}
.letterbox {
  & > li {
    display: grid;
    grid-template-columns: 1fr 3fr;
    row-gap: .5rem;
    border-bottom: 1px solid var(--hover);
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    * {
      grid-column-start: 2;
    }
    @media (max-width: $mobile-breakpoint) {
      grid-template-columns: 1fr 1fr;
      * {
        grid-column: span 2;
      }
      time {
        order: 3;
        grid-column: span 1;
        justify-self: end;
      }
      .rating {
        order: 2;
        grid-column: span 1;
      }
      .review {
        order: 4;
      }
    }
  }
  time {
   order: -1;
    grid-column-start: 1;
  }
  .rating {
    color: var(--space);
  }
}
{% endstylesheet %}

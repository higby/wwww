<style>
  {% renderTemplate "scss" %}
  @import './src/_styles/vars';

  .lattice {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    ul {
      display: grid;
      gap: 1rem;
      margin: 0;
      list-style-type: none;
    }
    li {
      background-color: $dark-grey;
      border-radius: $border-radius;
      padding: 1rem;
      margin: 0;
    }
    a {
      font-weight: $bold-weight;
      font-size: 1em;
    }
    p {
      font-size: 0.95em;
      margin: 0;
    }
    time {
      margin: .5rem 0;
      display: block;
      font-size: 0.85em;
      color: $footer-color;
    }
  }

  @media screen and (max-width: 700px) {
 .lattice {
    display: block;
    ul {
    margin-top: 1rem;
    }
  }
 
}

  {% endrenderTemplate %}
</style>


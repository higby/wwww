<nav class='lattice'>
  <ul>
    {% for plant in collections.masonryGrid1 %}
      <li>
        <a href="{{ plant.url }}">{{ plant.data.title }}</a>
        {% timeAgo plant.date, plant.data.tended %}
        <p>{{ plant.data.description }}</p>
      </li>
    {% endfor %}
  </ul>

<footer>
  <nav>
    <ul>
      <li>
        <a href="mailto:{{ site.email }}">{{ site.email }}</a>
      </li>
      <li>
        <a href="https://keys.openpgp.org/search?q={{ site.pgp | replace(" ", "") }}">{{ site.pgp }}</a>
      </li>

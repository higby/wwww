---
layout: base
---
<header>{% include 'header.njk' %}</header>
<main>
  <header>
    {% if title %}<h1>{{ title }}</h1>{% endif %}
    <p>Planted <time transform datetime='{{ page.date | datetime }}' title='{{ page.date | common }}'>{{ page.date | common }}</time></p>

    {% if tended %}<p>Tended to <time transform datetime='{{ tended | datetime }}' title='{{ tended | common }}'>{{ tended | common }}</time></p>{% endif %}

    {{ content | toc | safe }}
  </header>
  <article>{{ content | safe }}</article>
</main>
<footer>{% include 'footer.njk' %}</footer>


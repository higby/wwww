---
layout: base
---
<header>
  {% if title %}<h1>{{ title }}</h1>{% endif %}
  <p>Planted <time serverless datetime='{{ page.date | datetime }}' title='{{ page.date | common }}'>{{ page.date }}</time></p>
  {% if tended %}
  <p>Tended to <time serverless datetime='{{ tended | datetime }}' title='{{ tended | common }}'>{{ tended }}</time></p>
  {% endif %}
  {{ content | toc | safe }}
</header>
<article>
{{ content | safe }}
</article>